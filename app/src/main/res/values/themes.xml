<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PrevenirCSQ" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.PrevenirCSQ" parent="Base.Theme.PrevenirCSQ">
        <item name="colorPrimary">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="CheckBox.Base" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="CheckBox.Moderate" parent="CheckBox.Base">
        <item name="buttonTint">@drawable/checkbox_tint_moderate</item>
    </style>

    <style name="CheckBox.High" parent="CheckBox.Base">
        <item name="buttonTint">@drawable/checkbox_tint_high</item>
    </style>
</resources>