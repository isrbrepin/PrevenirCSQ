<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@drawable/background_bibliografia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bibliografiaScreen.ui.BibliografiaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_botones"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="0dp"
        app:title="Bibliografía / Estudios"
        app:titleTextColor="@color/white" />

    <!-- ScrollView para deslizar el contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Contenedor para las referencias -->
        <LinearLayout
            android:id="@+id/linksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Primera referencia -->
            <TextView
                android:id="@+id/ref1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Loveluck J, Copeland T, Hill J, Hunt A, Martin R. Biomechanical modelling of the forces applied to closed incisions during single-use negative pressure wound therapy. ePlasty. 2016;16:e20."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Segunda referencia -->
            <TextView
                android:id="@+id/ref2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Kilpadi DV, Cunningham MR. Evaluation of closed incision management with negative pressure wound therapy (CIM): hematoma/seroma and involvement of the lymphatic system. Wound Repair Regen. 2011;19:588–596."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Tercera referencia -->
            <TextView
                android:id="@+id/ref3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Birke-Sorensen H, et al. Evidence-based recommendations for Negative Pressure Wound Therapy: Treatment variables (pressure levels, wound filler and contact layer) - Steps towards an international consensus. Journal of plastic, reconstructive and aesthetic surgery: JPRAS 64 Suppl, S1–S16 (2011)."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Cuarta referencia -->
            <TextView
                android:id="@+id/ref4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Scalise A, Calamita R, Tartaglione C, et al. Improving wound healing and preventing surgical site complications of closed surgical incisions: a possible role of Incisional Negative Pressure Wound Therapy. A systematic review of the literature. Int Wound J. 2016;13:1260–1281."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Quinta referencia -->
            <TextView
                android:id="@+id/ref5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Shim HS, Choi JS, Kim SW. A role for postoperative negative pressure wound therapy in multitissue hand injuries. Biomed Res Int. 2018;2018."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Sexta referencia -->
            <TextView
                android:id="@+id/ref6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Malmsjo M, Huddleston E, Martin R. Biological effects of a disposable, canisterless negative pressure wound therapy system. ePlasty. 2014;14:e15."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Séptima referencia -->
            <TextView
                android:id="@+id/ref7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Ma Z, Shou K, Li Z, et al. Negative pressure wound therapy promotes vessel destabilization and maturation at various stages of wound healing and thus influences wound prognosis. Exp Ther Med. 2016;11(4):1307–1317."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Octava referencia -->
            <TextView
                android:id="@+id/ref8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Xia CY, Yu AX, Qi B, et al. Analysis of blood flow and local expression of angiogenesis associated growth factors in infected wounds treated with negative pressure wound therapy. Mol Med Rep. 2014;9(5):1749–1754."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

            <!-- Novena referencia -->
            <TextView
                android:id="@+id/ref9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9. Smith+Nephew 2020. Bacterial barrier testing of the PICO dressing. Internal Report. 2001002."
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginBottom="16dp"
                android:justificationMode="inter_word" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
